@model QuentinhaCarioca.Root.LegalUser
@using System.Collections.Generic;
@{
    Layout = "~/Areas/viaadmin/Views/Shared/_Layout.cshtml";
}
<form id="legalUserForm" asp-area="viaadmin" asp-controller="LegalUser" asp-action="Create" method="post">
    <input asp-for="LegalUserId" type="hidden" />

    <h3>Dados da Empresa</h3>
    <div class="row">
        <div class="col-md-6">
            <label asp-for="LegalName" class="control-label">Razão Social</label>
            <input asp-for="LegalName" maxlength="150" class="form-control" placeholder="Razão Social" required id="LegalName" name="LegalName" />
        </div>
        <div class="col-md-6">
            <label asp-for="ExhibitionName" class="control-label">Nome Fantasia</label>
            <input asp-for="ExhibitionName" maxlength="150" class="form-control" placeholder="Nome Fantasia" required id="ExhibitionName" name="ExhibitionName" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            <label asp-for="CNPJ" class="control-label">CNPJ</label>
            <input asp-for="CNPJ" maxlength="20" class="form-control" data-inputmask="'mask': '99.999.999/9999-99'" placeholder="CNPJ" id="CNPJ" name="CNPJ" />
        </div>
        <div class="col-md-4">
            <label asp-for="InscEst" class="control-label">Inscrição Estadual</label>
            <input asp-for="InscEst" class="form-control" placeholder="Inscrição Estadual" id="InscEst" name="InscEst" />
        </div>
        <div class="col-md-4">
            <label asp-for="InscMun" maxlength="30" class="control-label">Inscrição Municipal</label>
            <input asp-for="InscMun" maxlength="30" class="form-control" placeholder="Inscrição Municipal" id="InscMun" name="InscMun" />
        </div>
    </div>
    <br />
    <hr />
    <h3>Informações para acesso</h3>
    <div class="row">
        <div class="col-md-3" style="padding-left: 10px;">
            <label asp-for="Employees[0].User.UserName" class="control-label">Nome de Usuário</label>
            <input type="email" placeholder="Formato de e-mail" required asp-for="Employees[0].User.UserName" class="form-control" maxlength="70" />
        </div>
        <div class="col-md-3" style="padding-left: 3px;">
            <label asp-for="Employees[0].User.PasswordHash" class="control-label">Senha</label>
            <input type="password" maxlength="10" required asp-for="Employees[0].User.PasswordHash" class="form-control" />
        </div>
        <div class="col-md-3" style="padding-left: 3px;">
            <label class="control-label">Telefone</label>
            <input asp-for="Employees[0].User.Contacts[0].Phone" data-inputmask="'mask': '(99)9999-9999'" class="form-control" />
        </div>
        <div class="col-md-3" style="padding-left: 3px;">
            <label class="control-label">Celular</label>
            <input asp-for="Employees[0].User.Contacts[0].CellPhone" data-inputmask="'mask': '(99)99999-9999'" class="form-control" />
        </div>
    </div>
    <br />
    <hr />
    <h3>Dados para o sistema</h3>
    <div class="row">
        <div class="col-md-6">
            <label asp-for="UrlData" class="control-label">Logotipo</label>
            <input type="file" id="imgSource" onchange="readUrl(this)" class="form-control" />
            <br />
            <img src="../../img/Logo_TV_2015.png" width="277" height="110" id="imgRender" />
            <input type="hidden" asp-for="UrlData" id="UrlData" name="UrlData" />
        </div>
        <div class="col-md-6">
            <input asp-for="Active" type="hidden" value="true" />
            <label asp-for="Items">Tipo de Restaurante</label>
            <select asp-for="Items" class="form-control" asp-items="(List<SelectListItem>)ViewBag.ClassesList" multiple style="height: 180px;"></select>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-md-4" style="padding-left: 10px;">
            <label class="control-label">E-mail</label>
            <input type="email" class="form-control" asp-for="Contacts[0].Email" maxlength="50" />
        </div>
        <div class="col-md-4" style="padding-left: 3px;">
            <label class="control-label">Telefone</label>
            <input asp-for="Contacts[0].Phone" data-inputmask="'mask': '(99)9999-9999'" class="form-control" required />
        </div>
        <div class="col-md-4" style="padding-left: 3px;">
            <label class="control-label">Celular</label>
            <input asp-for="Contacts[0].CellPhone" data-inputmask="'mask': '(99)99999-9999'" class="form-control" required />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3" style="left:5px;">
            <label class="control-label">CEP</label>
            <input data-inputmask="'mask': '99999-999'" maxlength="9" class="form-control" placeholder="CEP" asp-for="Addresses[0].ZipCode" />
        </div>
        <div class="col-md-3">
            <label asp-for="Items">Latitude</label>
            <input type="text" asp-for="Addresses[0].latitude" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="Items">Longitude</label>
            <input type="text" asp-for="Addresses[0].longitude" class="form-control" />
        </div>
    </div>

    <div class="row">

    </div>
    <br />
    <div class="row">
        <div class="col-md-6">
            <label class="control-label">Rua</label>
            <input maxlength="100" class="form-control" placeholder="Rua" asp-for="Addresses[0].Street" required />
        </div>
        <div class="col-md-2">
            <label class="control-label">Número</label>
            <input maxlength="10" class="form-control" placeholder="Número" asp-for="Addresses[0].Number" />
        </div>
        <div class="col-md-4">
            <label class="control-label">Complemento</label>
            <input maxlength="10" class="form-control" placeholder="Complemento" asp-for="Addresses[0].AddOn" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <label class="control-label">Bairro</label>
            <input maxlength="50" class="form-control" placeholder="Bairro" asp-for="Addresses[0].NeighborHood" required />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-6">
            <label class="control-label">Estado</label>
            <select class="form-control" id="States" asp-items="@((List<SelectListItem>)ViewBag.StateList)"></select>
        </div>
        <div class="col-md-6">
            <label class="control-label">Cidade</label>
            <select class="form-control" asp-for="Addresses[0].City.CityId" required>
                <option></option>
            </select>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <label asp-for="Settings.DeliveryCoust">Taxa de entrega</label>
            <input type="number" step="0.1" asp-for="Settings.DeliveryCoust" class="form-control" placeholder="Taxa de Entrega" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label asp-for="Settings.MondayIsWorkDay">2ª Feira </label>
            <input type="checkbox" asp-for="Settings.MondayIsWorkDay" /><br />
            <label asp-for="Settings.MondayStartHour">Hora de Abrir</label>
            <input type="text" asp-for="Settings.MondayStartHour" data-inputmask="'mask': '99:99'" class="form-control" /><br />
        </div>
        <div class="col-md-3">
            <label>&nbsp;</label><br />
            <label asp-for="Settings.MondayEndHour">Hora de Fechar</label><br />
            <input type="text" asp-for="Settings.MondayEndHour" data-inputmask="'mask': '99:99'" class="form-control" /><br />
        </div>
        <div class="col-md-3">
            <label asp-for="Settings.TuesdayIsWorkDay">3ª Feira </label>
            <input type="checkbox" asp-for="Settings.TuesdayIsWorkDay" /><br />
            <label asp-for="Settings.TuesdayStartHour">Hora de Abrir</label>
            <input type="text" asp-for="Settings.TuesdayStartHour" data-inputmask="'mask': '99:99'" class="form-control" /><br />
        </div>
        <div class="col-md-3">
            <label>&nbsp;</label><br />
            <label asp-for="Settings.TuesdayEndHour">Hora de Fechar</label><br />
            <input type="text" asp-for="Settings.TuesdayEndHour" data-inputmask="'mask': '99:99'" class="form-control" /><br />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <label asp-for="Settings.WednesdayIsWorkDay">4ª Feira </label>
            <input type="checkbox" asp-for="Settings.WednesdayIsWorkDay" /><br />
            <label asp-for="Settings.WednesdayStartHour">Hora de Abrir</label>
            <input type="text" asp-for="Settings.WednesdayStartHour" data-inputmask="'mask': '99:99'" class="form-control" /><br />
        </div>
        <div class="col-md-3">
            <label>&nbsp;</label><br />
            <label asp-for="Settings.WednesdayEndHour">Hora de Fechar</label><br />
            <input type="text" asp-for="Settings.WednesdayEndHour" data-inputmask="'mask': '99:99'" class="form-control" /><br />
        </div>
        <div class="col-md-3">
            <label asp-for="Settings.ThursdayIsWorkDay">5ª Feira </label>
            <input type="checkbox" asp-for="Settings.ThursdayIsWorkDay" /><br />
            <label asp-for="Settings.ThursdayStartHour">Hora de Abrir</label>
            <input type="text" asp-for="Settings.ThursdayStartHour" data-inputmask="'mask': '99:99'" class="form-control" /><br />
        </div>
        <div class="col-md-3">
            <label>&nbsp;</label><br />
            <label asp-for="Settings.ThursdayEndHour">Hora de Fechar</label><br />
            <input type="text" asp-for="Settings.ThursdayEndHour" data-inputmask="'mask': '99:99'" class="form-control" /><br />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <label asp-for="Settings.FridayIsWorkDay">6ª Feira </label>
            <input type="checkbox" asp-for="Settings.FridayIsWorkDay" /><br />
            <label asp-for="Settings.FridayStartHour">Hora de Abrir</label>
            <input type="text" asp-for="Settings.FridayStartHour" data-inputmask="'mask': '99:99'" class="form-control" /><br />
        </div>
        <div class="col-md-3">
            <label>&nbsp;</label><br />
            <label asp-for="Settings.FridayEndHour">Hora de Fechar</label><br />
            <input type="text" asp-for="Settings.FridayEndHour" data-inputmask="'mask': '99:99'" class="form-control" /><br />
        </div>
        <div class="col-md-3">
            <label asp-for="Settings.SaturdayIsWorkDay">Sábado</label>
            <input type="checkbox" asp-for="Settings.SaturdayIsWorkDay" /><br />
            <label asp-for="Settings.SaturdayStartHour">Hora de Abrir</label>
            <input type="text" asp-for="Settings.SaturdayStartHour" data-inputmask="'mask': '99:99'" class="form-control" /><br />
        </div>
        <div class="col-md-3">
            <label>&nbsp;</label><br />
            <label asp-for="Settings.SaturdayEndHour">Hora de Fechar</label><br />
            <input type="text" asp-for="Settings.SaturdayEndHour" data-inputmask="'mask': '99:99'" class="form-control" /><br />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <label asp-for="Settings.SundayIsWorkDay">Domingo</label>
            <input type="checkbox" asp-for="Settings.SundayIsWorkDay" /><br />
            <label asp-for="Settings.SundayStartHour">Hora de Abrir</label>
            <input type="text" asp-for="Settings.SundayStartHour" data-inputmask="'mask': '99:99'" class="form-control" /><br />
        </div>
        <div class="col-md-3">
            <label>&nbsp;</label><br />
            <label asp-for="Settings.SundayEndHour">Hora de Fechar</label><br />
            <input type="text" asp-for="Settings.SundayEndHour" data-inputmask="'mask': '99:99'" class="form-control" /><br />
        </div>
    </div>

    <br />
    <div class="row">
        <div class="col-md-3">
            <label class="control-label">&nbsp;</label>
            <input type="submit" value="REGISTRAR" class="btn btn-primary" />
        </div>
    </div>
</form>
<script src="~/appjs/region.js"></script>
<script src="~/appjs/contact.js"></script>

