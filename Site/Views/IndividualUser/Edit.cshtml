@model QuentinhaCarioca.Root.Customer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<hr />
<div class="card">
    <div class="content">
        <form asp-action="Edit" asp-controller="IndividualUser" method="post">
            <input type="hidden" asp-for="CustomerId" />
            <input type="hidden" asp-for="User.IndividualUserId" />
            <div class="row">
                <div class="col-md-4">
                    <label>Nome</label>
                    <input asp-for="User.FirstName" required type="text" class="form-control border-input" placeholder="Primeiro Nome" />
                </div>
                <div class="col-md-8">
                    <label>Sobrenome</label>
                    <input asp-for="User.LastName" required type="text" class="form-control border-input" placeholder="Sobrenome" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label>E-mail / Nome de Usuário</label>
                    <input type="email" asp-for="User.UserName" required class="form-control border-input" placeholder="E-mail para acesso ao sistema" />
                </div>
                <div class="col-md-6">
                    <label>Senha</label>
                    <input type="password" disabled class="form-control border-input" placeholder="Senha" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label>E-mail</label>
                    <input type="email" class="form-control border-input" asp-for="User.Contacts[0].Email" placeholder="E-mail para comunicação" maxlength="50" />
                </div>
                <div class="col-md-4">
                    <label>Telefone</label>
                    <input asp-for="User.Contacts[0].Phone" data-inputmask="'mask': '(99)9999-9999'" class="form-control border-input" />
                </div>
                <div class="col-md-4">
                    <label>Celular</label>
                    <input asp-for="User.Contacts[0].CellPhone" data-inputmask="'mask': '(99)99999-9999'" class="form-control border-input" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <hr />
                </div>
            </div>

            <div class="row">
                <div class="col-md-3">
                    <label>CEP</label>
                    <input asp-for="User.Addresses[0].ZipCode" type="text" data-inputmask="'mask': '99999-999'" class="form-control border-input" placeholder="CEP" />
                </div>
            </div>


            <div class="row">
                <div class="col-md-6">
                    <label>Rua</label>
                    <input asp-for="User.Addresses[0].Street" type="text" class="form-control border-input" placeholder="Rua" required />
                </div>
                <div class="col-md-2">
                    <label>Número</label>
                    <input asp-for="User.Addresses[0].Number" type="text" class="form-control border-input" placeholder="Rua" />
                </div>
                <div class="col-md-4">
                    <label>Complemento</label>
                    <input asp-for="User.Addresses[0].AddOn" type="text" class="form-control border-input" placeholder="Rua" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <label>Bairro</label>
                    <input asp-for="User.Addresses[0].NeighborHood" type="text" class="form-control border-input" placeholder="Bairro" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label>Estado</label>
                    <select asp-items="(List<SelectListItem>)ViewBag.StateList" class="form-control border-input" id="States"></select>
                </div>
                <div class="col-md-6">
                    <label>Cidades</label>
                    <select asp-items="(List<SelectListItem>)ViewBag.CitiesList" class="form-control border-input" id="City"></select>
                    <input type="hidden" asp-for="User.Addresses[0].City.CityId" />
                </div>

            </div>
            <div class="row">
                <div class="col-md-1">
                    <button type="submit" class="btn btn-default">Update Profile</button>
                </div>
            </div>
            <div class="clearfix"></div>
        </form>
    </div>
</div>



